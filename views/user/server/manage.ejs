<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= server.name %> - <%= settings.panelName %></title>
  <link rel="icon" href="/falcon.ico">

  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen">
  <nav class="bg-gray-800 border-b border-gray-700">
    <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
      <div class="flex items-center gap-4">
        <a href="/dashboard" class="text-gray-400 hover:text-white">‚Üê Back</a>
        <span class="text-xl font-bold"><%= server.name %></span>
      </div>
      <div class="flex items-center gap-4">
        <span class="text-sm text-gray-400">Node: <%= server.node.name %></span>
        <% if (server.containerId) { %>
          <span class="text-xs px-2 py-1 bg-blue-500/20 text-blue-400 rounded">Container ID: <%= server.containerId.substring(0, 8) %>...</span>
        <% } %>
      </div>
    </div>
  </nav>
  
  <div class="max-w-7xl mx-auto px-6 py-4 flex gap-4 border-b border-gray-800 overflow-x-auto">
    <a href="/server/<%= server.id %>" class="px-4 py-2 bg-violet-500/20 text-violet-400 rounded-lg whitespace-nowrap">Overview</a>
    <a href="/server/<%= server.id %>/console" class="px-4 py-2 text-gray-400 hover:bg-gray-800 rounded-lg whitespace-nowrap">Console</a>
    <a href="/server/<%= server.id %>/files" class="px-4 py-2 text-gray-400 hover:bg-gray-800 rounded-lg whitespace-nowrap">Files</a>
    <a href="/server/<%= server.id %>/players" class="px-4 py-2 text-gray-400 hover:bg-gray-800 rounded-lg whitespace-nowrap">Players</a>
    <a href="/server/<%= server.id %>/plugins" class="px-4 py-2 text-gray-400 hover:bg-gray-800 rounded-lg whitespace-nowrap">Plugins</a>
    <a href="/server/<%= server.id %>/versions" class="px-4 py-2 text-gray-400 hover:bg-gray-800 rounded-lg whitespace-nowrap">Versions</a>
    <a href="/server/<%= server.id %>/settings" class="px-4 py-2 text-gray-400 hover:bg-gray-800 rounded-lg whitespace-nowrap">Settings</a>
  </div>
  
  <main class="max-w-7xl mx-auto px-6 py-8">
    <!-- Server Status Banner -->
    <% if (!server.containerId) { %>
      <div class="mb-6 bg-yellow-500/10 border border-yellow-500/30 rounded-xl p-4">
        <div class="flex items-center gap-3">
          <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
          <div>
            <p class="font-semibold text-yellow-400">No Docker Container</p>
            <p class="text-sm text-yellow-300/70">This server exists in database but has no Docker container. Ask an admin to recreate it.</p>
          </div>
        </div>
      </div>
    <% } %>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-gray-800/50 rounded-xl border border-gray-700/50 p-6">
        <p class="text-gray-400 text-sm">Status</p>
        <p class="text-2xl font-bold <%= server.status === 'running' ? 'text-green-400' : server.status === 'stopped' ? 'text-red-400' : 'text-gray-400' %>">
          <%= server.status.charAt(0).toUpperCase() + server.status.slice(1) %>
        </p>
      </div>
      <div class="bg-gray-800/50 rounded-xl border border-gray-700/50 p-6">
        <p class="text-gray-400 text-sm">Players</p>
        <p class="text-2xl font-bold"><%= server.players.length %></p>
      </div>
      <div class="bg-gray-800/50 rounded-xl border border-gray-700/50 p-6">
        <p class="text-gray-400 text-sm">Memory</p>
        <p class="text-2xl font-bold"><%= server.memory %> MB</p>
      </div>
      <div class="bg-gray-800/50 rounded-xl border border-gray-700/50 p-6">
        <p class="text-gray-400 text-sm">CPU</p>
        <p class="text-2xl font-bold"><%= server.cpu %>%</p>
      </div>
    </div>
    
    <!-- Server Info -->
    <div class="bg-gray-800/30 rounded-xl border border-gray-700/50 p-6 mb-8">
      <h2 class="text-lg font-semibold mb-4">Server Information</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div>
          <p class="text-gray-400 text-sm">Type & Version</p>
          <p class="font-medium"><%= server.type %> <%= server.version %></p>
        </div>
        <div>
          <p class="text-gray-400 text-sm">Port</p>
          <p class="font-medium"><%= server.port %></p>
        </div>
        <div>
          <p class="text-gray-400 text-sm">Created</p>
          <p class="font-medium"><%= new Date(server.createdAt).toLocaleDateString() %></p>
        </div>
        <div>
          <p class="text-gray-400 text-sm">Node</p>
          <p class="font-medium"><%= server.node.name %> (<%= server.node.location %>)</p>
        </div>
        <% if (server.containerId) { %>
        <div>
          <p class="text-gray-400 text-sm">Container ID</p>
          <p class="font-medium font-mono text-sm"><%= server.containerId.substring(0, 12) %>...</p>
        </div>
        <% } %>
      </div>
    </div>
    
    <!-- Server Controls -->
    <div class="mb-8">
      <h2 class="text-lg font-semibold mb-4">Server Controls</h2>
      <div class="flex flex-wrap gap-4">
        <button 
          onclick="controlServer('start')" 
          class="px-6 py-3 bg-green-500/20 text-green-400 rounded-lg hover:bg-green-500/30 transition disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2"
          <%= server.status === 'running' || !server.containerId ? 'disabled' : '' %>
          id="startBtn"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Start Server
        </button>
        
        <button 
          onclick="controlServer('restart')" 
          class="px-6 py-3 bg-yellow-500/20 text-yellow-400 rounded-lg hover:bg-yellow-500/30 transition disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2"
          <%= server.status !== 'running' || !server.containerId ? 'disabled' : '' %>
          id="restartBtn"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
          Restart Server
        </button>
        
        <button 
          onclick="controlServer('stop')" 
          class="px-6 py-3 bg-red-500/20 text-red-400 rounded-lg hover:bg-red-500/30 transition disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2"
          <%= server.status !== 'running' || !server.containerId ? 'disabled' : '' %>
          id="stopBtn"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 10a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 01-1-1v-4z"/>
          </svg>
          Stop Server
        </button>
        
        <button 
          onclick="getServerLogs()" 
          class="px-6 py-3 bg-blue-500/20 text-blue-400 rounded-lg hover:bg-blue-500/30 transition flex items-center gap-2"
          <%= !server.containerId ? 'disabled' : '' %>
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          View Logs
        </button>
      </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="bg-gray-800/30 rounded-xl border border-gray-700/50 p-6">
      <h2 class="text-lg font-semibold mb-4">Quick Actions</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4">
        <a href="/server/<%= server.id %>/console" class="p-4 bg-gray-700/30 rounded-lg hover:bg-gray-700/50 transition text-center">
          <div class="w-10 h-10 rounded-lg bg-violet-500/20 flex items-center justify-center mx-auto mb-2">
            <svg class="w-5 h-5 text-violet-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <p class="font-medium">Console</p>
          <p class="text-xs text-gray-400">Send commands</p>
        </a>
        
        <a href="/server/<%= server.id %>/files" class="p-4 bg-gray-700/30 rounded-lg hover:bg-gray-700/50 transition text-center">
          <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center mx-auto mb-2">
            <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 19a2 2 0 01-2-2V7a2 2 0 012-2h4l2 2h4a2 2 0 012 2v1M5 19h14a2 2 0 002-2v-5a2 2 0 00-2-2H9a2 2 0 00-2 2v5a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <p class="font-medium">File Manager</p>
          <p class="text-xs text-gray-400">Edit server files</p>
        </a>
        
        <a href="/server/<%= server.id %>/players" class="p-4 bg-gray-700/30 rounded-lg hover:bg-gray-700/50 transition text-center">
          <div class="w-10 h-10 rounded-lg bg-green-500/20 flex items-center justify-center mx-auto mb-2">
            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <p class="font-medium">Players</p>
          <p class="text-xs text-gray-400">Manage players</p>
        </a>
        
        <a href="/server/<%= server.id %>/settings" class="p-4 bg-gray-700/30 rounded-lg hover:bg-gray-700/50 transition text-center">
          <div class="w-10 h-10 rounded-lg bg-yellow-500/20 flex items-center justify-center mx-auto mb-2">
            <svg class="w-5 h-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <p class="font-medium">Settings</p>
          <p class="text-xs text-gray-400">Configure server</p>
        </a>
      </div>
    </div>
  </main>
  
  <!-- Loading Overlay -->
  <div id="loadingOverlay" class="hidden fixed inset-0 bg-black/70 flex items-center justify-center z-50">
    <div class="bg-gray-800 rounded-xl p-8 max-w-md w-full mx-4">
      <div class="flex flex-col items-center">
        <div class="w-16 h-16 rounded-full border-4 border-violet-500 border-t-transparent animate-spin mb-4"></div>
        <h3 class="text-xl font-bold mb-2" id="loadingTitle">Processing...</h3>
        <p class="text-gray-400 text-center" id="loadingMessage">Please wait while we process your request.</p>
      </div>
    </div>
  </div>

  <script>
    // Show loading overlay
    function showLoading(title = 'Processing...', message = 'Please wait while we process your request.') {
      document.getElementById('loadingTitle').textContent = title;
      document.getElementById('loadingMessage').textContent = message;
      document.getElementById('loadingOverlay').classList.remove('hidden');
    }
    
    // Hide loading overlay
    function hideLoading() {
      document.getElementById('loadingOverlay').classList.add('hidden');
    }
    
    // Server control function
    async function controlServer(action) {
      const originalText = event.target.innerHTML;
      const button = event.target;
      
      // Show confirmation for stop/restart
      if (action === 'stop' || action === 'restart') {
        const result = await Swal.fire({
          title: `Are you sure?`,
          text: `Do you really want to ${action} the server?`,
          icon: 'warning',
          showCancelButton: true,
          confirmButtonText: `Yes, ${action} it!`,
          cancelButtonText: 'Cancel',
          confirmButtonColor: action === 'stop' ? '#ef4444' : '#eab308',
          background: '#1f2937',
          color: '#fff'
        });
        
        if (!result.isConfirmed) return;
      }
      
      // Disable all buttons and show loading
      document.querySelectorAll('button').forEach(btn => btn.disabled = true);
      showLoading(
        `${action.charAt(0).toUpperCase() + action.slice(1)}ing Server...`,
        'This may take a few moments.'
      );
      
      try {
        const response = await fetch(`/server/<%= server.id %>/${action}`, {
          method: 'POST',
          headers: { 
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          }
        });
        
        const result = await response.json();
        
        if (result.success) {
          // Show success message
          await Swal.fire({
            title: 'Success!',
            text: result.message || `Server ${action}ed successfully.`,
            icon: 'success',
            timer: 2000,
            showConfirmButton: false,
            background: '#1f2937',
            color: '#fff'
          });
          
          // Reload page after delay
          setTimeout(() => {
            location.reload();
          }, 1000);
          
        } else {
          throw new Error(result.error || `Failed to ${action} server`);
        }
      } catch (error) {
        hideLoading();
        document.querySelectorAll('button').forEach(btn => btn.disabled = false);
        
        await Swal.fire({
          title: 'Error!',
          text: error.message,
          icon: 'error',
          confirmButtonText: 'OK',
          background: '#1f2937',
          color: '#fff'
        });
      }
    }
    
    // Get server logs
    async function getServerLogs() {
      showLoading('Fetching Logs', 'Getting server logs from the node...');
      
      try {
        const response = await fetch(`/server/<%= server.id %>/logs`);
        const result = await response.json();
        
        hideLoading();
        
        if (result.success) {
          // Show logs in a modal
          await Swal.fire({
            title: 'Server Logs',
            html: `<div class="text-left">
              <div class="bg-black rounded-lg p-4 font-mono text-sm max-h-96 overflow-y-auto">
                <pre class="whitespace-pre-wrap text-green-400">${result.logs || 'No logs available'}</pre>
              </div>
              <p class="text-gray-400 text-sm mt-2">Last 100 lines of logs</p>
            </div>`,
            width: '800px',
            showConfirmButton: true,
            confirmButtonText: 'Close',
            background: '#1f2937',
            color: '#fff'
          });
        } else {
          throw new Error(result.error || 'Failed to get logs');
        }
      } catch (error) {
        hideLoading();
        await Swal.fire({
          title: 'Error!',
          text: error.message,
          icon: 'error',
          confirmButtonText: 'OK',
          background: '#1f2937',
          color: '#fff'
        });
      }
    }
    
    // Auto-refresh status every 30 seconds if server is running
    <% if (server.status === 'running') { %>
    setTimeout(() => {
      location.reload();
    }, 30000);
    <% } %>
    
    // Add status indicator animation
    const statusElement = document.querySelector('.text-2xl.font-bold');
    if (statusElement.textContent.toLowerCase() === 'running') {
      statusElement.classList.add('animate-pulse');
    }
  </script>
</body>
</html>